<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:background="@drawable/textlines_workout_details">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/textlines_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/workout_details"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/textlines_right">

            <TextView
                android:id="@+id/avg_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="3dp"
                android:text="@string/average"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/average_text_view_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/default_rate"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/avg_text_view_id"
                android:layout_toStartOf="@id/min_rate_text_view_id_1"/>

            <TextView
                android:id="@+id/min_rate_text_view_id_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="@string/units_time_rate"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/textlines_bottom">

                <TextView
                    android:id="@+id/max_text_view_id_2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/max" />

                <TextView
                    android:id="@+id/max_text_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/default_rate"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_toEndOf="@+id/max_text_view_id_2"
                    android:layout_toStartOf="@+id/max_min_mi_id"/>

                <TextView
                    android:id="@+id/max_min_mi_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="@string/units_time_rate"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="3dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/textlines_top">

                <TextView
                    android:id="@+id/min_text_view_id_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="3dp"
                    android:text="@string/min"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/min_text_view_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingStart="7dp"
                    android:text="@string/default_rate"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_toEndOf="@+id/min_text_view_id_3"
                    android:layout_toStartOf="@+id/min_min_mi_id"/>

                <TextView
                    android:id="@+id/min_min_mi_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center|bottom"
                    android:text="@string/units_time_rate"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="3dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="10dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="10dp"/>

    </LinearLayout>

</LinearLayout>

